extends ../../Layout/Main
block content
	.row.well
		.col-md-8
			h4 #{title}
		.col-md-4
			.pull-right
				button.btn.btn-default(onclick='location.href="/Shop/Manage/List"') 取消
				span &nbsp;
				button.btn.btn-primary(onclick='jQuery("#admform").submit()') 保存
	form#admform.form-horizontal(action="/Shop/Manage/Save",method="post",enctype="multipart/form-data")
		.row
			.col-lg-8
				.form-group
					label.col-lg-1.control-label(for="title") 标题*
					.col-lg-10
						input#title.form-control(name="title",placeholder="输入标题",value="#{data.title}")
				.form-group
					label.col-lg-1.control-label(for="points") 积分*
					.col-lg-4
						input#points.form-control(name="points",placeholder="所需积分",value="#{data.points}")
				.form-group
					label.col-lg-1.control-label(for="image") 图片*
					.col-lg-10
						input#image.form-control(name="image",type="file")
				.form-group
					label.col-lg-1.control-label(for="desc") 描述
					.col-lg-10
						textarea#desc.form-control(name="desc",rows=10) #{data.desc}
				.form-group
					label.col-lg-1.control-label(for="state") 状态
					.col-lg-6
						.radio-inline
							input#state0(name="state",value="0",type="radio",checked=data.state==0) 
							label 未发布
						.radio-inline
							input#state1(name="state",value="1",type="radio",checked=data.state==1)
							label 发布

			.col-lg-4
				if data.img
					.well
						img(src='/uploads/#{data.img}',width='100%',height='100%')
					.well
						img(src='/uploads/#{data.img_thumb}')
		input#id(name="id",type="hidden",value="#{data._id}")