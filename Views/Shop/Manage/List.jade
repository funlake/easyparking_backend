extends ../../Layout/Main
block content
	.row.well
		.col-md-8
			h4 商品管理
		.col-md-4
			.pull-right
				button.btn.btn-primary(onclick='location.href="/Shop/Manage/Add"') 添加商品
	.row 
		table.table.table-striped.table-bordered
			tr
				th(width=5) #
				th(width='30%') 标题
				th(width='10%') 所需积分
				th(width='10%') 兑换详情
				th(width='10%') 发布
				th 操作
			each row,key in data
				tr
					td #{key+1}
					td #{row.title}
					td #{row.points}
					td 
						a(href='#') 查看
					td
						if row.state == "1"
							i.glyphicon.glyphicon-ok-circle
						else
							i.glyphicon.glyphicon-remove-circle
					td
						span
							a(href='/Shop/Manage/Edit?id=#{row._id}')
								i.glyphicon.glyphicon-pencil
						span
							a.modal-remove(href='#',data-href='/Shop/Manage/Delete?id=#{row._id}',data-id="#{row._id}",data-toggle="modal" data-target="#modal-delete-cfm")
								i.glyphicon.glyphicon-trash
		.page 
			!= pageNav